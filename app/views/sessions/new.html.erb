<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <title>ログイン画面</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <style>
  html, body {
    height: 100%;
  }
  body {
    display: flex;
    flex-direction: column;
  }
  
</style>
</head>
<body class="d-flex flex-column min-vh-100">
  <%= render 'shared/before_login_header' %>

  <div class="container mt-5 flex-grow-1">
    <%= form_tag login_path, class: "mt-5" do %>
      <div class="row justify-content-center">
        <div class="col-md-6">
          <div class="mb-3">
            <%= label_tag :email, "メールアドレス", class: "form-label" %>
            <%= text_field_tag :email, params[:email], class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= label_tag :password, "パスワード", class: "form-label" %>
            <%= password_field_tag :password, nil, class: "form-control" %>
          </div>
          <div class="actions text-center">
            <%= submit_tag "ログイン", class: "btn btn-primary" %>
          </div>
          <div class="text-center mt-3">
            <%= link_to 'パスワード忘れ', new_password_reset_path, class: "btn btn-link" %>
            <%= link_to 'トップ', root_path, class: "btn btn-link" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="footer bg-info text-white text-center py-3 mt-auto">
    <%= render 'shared/before_login_footer' %>
  </div>
</body>
</html>