<!DOCTYPE html>
<html>
<head>
  <title><%= t('.title') %></title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_importmap_tags %>
  <style>
  html, body {
    height: 100%;
  }
  body {
    display: flex;
    flex-direction: column;
  }
  .flex-grow-1-wrapper {
    flex-grow: 1;
  }
</style>
</head>
<body class="d-flex flex-column min-vh-100">
  <%= render 'shared/before_login_header' %>

  <div class="container flex-grow-1">
    <div class="row">
      <div class="col-md-10 col-lg-8 mx-auto">
        <h1><%= t('.title') %></h1>
        <%= form_with model: @user, url: password_reset_path(@token), method: :patch do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
          <div class="mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= @user.email %>
          </div>
          <div class="mb-3">
            <%= f.label :password,"新しいパスワード", class: "form-label" %>
            <%= f.password_field :password, class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= f.label :password_confirmation,"確認", class: "form-label" %>
            <%= f.password_field :password_confirmation, class: "form-control" %>
          </div>
          <%= f.submit "変更", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="footer bg-info text-white text-center py-3 mt-auto">
    <%= render 'shared/before_login_footer' %>
  </div>
</body>
</html>